@using FUTOMedical.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
     Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

   
        <div class="container">

            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center logo-margin ">

                    <img src="assets/img/logo.png" alt="" />
                </div>
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Please Sign In</h3>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "" }))
                            {
                                @Html.AntiForgeryToken()
                            <fieldset>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="Email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="Password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="RememberMe" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" value="Log in" class="btn btn-lg btn-success btn-block" />
                                <br/>
                                <div class="form-group">
                                    <a class="btn btn-lg btn-danger btn-block" href="@Url.Action("ForgotPassword","Account",null)">Forgot Password</a>
                                </div>
                            </fieldset>
                            }
                            </div>
                    </div>
                </div>
            </div>
        </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}