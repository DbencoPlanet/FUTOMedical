@model IEnumerable<FUTOMedical.Models.Entities.Doctor>
@using FUTOMedical.Areas.Service

@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}

<div class="row">
    <!--  page header -->
    <div class="col-lg-12">
        <h1 class="page-header">Doctors</h1>
    </div>
    <!-- end  page header -->
</div>
<div class="row">
    @*<div class="col-lg-1"></div>*@
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-fw fa-file-text-o"></i>
                Doctors
            </div>
           
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="example1">
                        <thead>
                            <tr>
                                <th>S/NO</th>
                                <th>
                                    FULLNAME
                                </th>
                                <th>
                                    EMAIL
                                </th>
                                <th>
                                    ACTION
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 0;
                            }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>

                                    <td>
                                        @item.Fullname
                                    </td>
                                    <td>@item.EmailAddress</td>
                                    <td>


                                        <div class="btn-group">
                                            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                                                Action <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>
                                                    @Html.ActionLink("View Doctor Profile", "profile","UserManager", new { id = item.Id, area = "Doctors" }, new { @class = "" })
                                                </li>
                                             

                                            </ul>
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
    @*<div class="col-lg-1"></div>*@
</div>


@section Style {

    <link href="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.js"></script>

}

@section Scripts2 {
    <script>
            $(document).ready(function () {
                $('#example1').dataTable();
            });
    </script>

}

