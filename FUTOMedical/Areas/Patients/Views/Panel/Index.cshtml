@model IEnumerable<FUTOMedical.Models.Entities.OPD>
@using FUTOMedical.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}

<div class="row">
    <!--  page header -->
    <div class="col-lg-12">
        <h1 class="page-header">Patient OPD</h1>
    </div>
    <!-- end  page header -->
</div>
<div class="row">
    @*<div class="col-lg-1"></div>*@
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-fw fa-file-text-o"></i>
                Patient OPD
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="example1">
                        <thead>
                            <tr>
                                <th>S/No</th>
                                <th>
                                    Patient Name
                                </th>
                                <th>
                                    Folder Number
                                </th>
                                <th>Nurse Name</th>
                                <th>BP</th>
                                <th>Temperature</th>
                                <th>Weight</th>

                                <th>
                                    Action
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 0;
                            }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>

                                    <th>
                                        @Html.DisplayFor(modelItem => item.Patient.Fullname)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Patient.FolderNumber)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nurse.Fullname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Temperature)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Weight)
                                    </td>


                                    <td>
                                        <a class="btn btn-info" href="@Url.Action("Details", "OPDs", new { id= item.Id, area = "Panel"  })"> <i class='fa fa-eye fa-fw'></i>Details</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
    @*<div class="col-lg-1"></div>*@
</div>


@section Style {

    <link href="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.js"></script>

}

@section Scripts2 {
    <script>
        $(document).ready(function () {
            $('#example1').dataTable();
        });
    </script>

}

