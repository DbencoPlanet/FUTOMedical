@model IEnumerable<FUTOMedical.Models.Entities.Patient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}

<div class="row">
    <!--  page header -->
    <div class="col-lg-12">
        <h1 class="page-header">Patients</h1>
    </div>
    <!-- end  page header -->
</div>
<div class="row">
    @*<div class="col-lg-1"></div>*@
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-fw fa-file-text-o"></i>
                Patient Management
            </div>
           
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="example1">
                        <thead>
                            <tr>
                                <th>S/No</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Fullname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CardNumber)
                                </th>
                                @*@if (User.IsInRole("SuperAdmin,Doctor,Admin,Nurse"))
                                {*@
                                    <th>
                                        Action
                                    </th>
                                @*}*@
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 0;
                            }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fullname)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.CardNumber)
                                    </td>
                                    @*@if (User.IsInRole("SuperAdmin,Doctor,Admin,Nurse"))
                                    {*@
                                        <td>

                                            <div class="btn-group">
                                                @if (User.IsInRole("Nurse"))
                                                {
                                                    <a class="btn btn-primary" href="@Url.Action("Create", "OPDs", new { id = item.Id, area = "Panel" })"> <i class='fa fa-plus fa-fw'></i> New OPD</a>
                                                }
                                                    <a class="btn btn-success" href="@Url.Action("PatientReport", "Reports", new { id = item.Id, area ="Panel" })"> <i class='fa fa-eye-slash fa-fw'></i>View Report</a>
                                                    <a class="btn btn-danger" href="@Url.Action("Profile", "UserManager", new { id = item.Id,area = "Patients" })"> <i class='fa fa-eye fa-fw'></i>Profile</a>

                                                </div>

                                        </td>
                                    @*}*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
    @*<div class="col-lg-1"></div>*@
</div>


@section Style {

    <link href="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.js"></script>

}

@section Scripts2 {
    <script>
        $(document).ready(function () {
            $('#example1').dataTable();
        });
    </script>

}


























