@model FUTOMedical.Models.Entities.Report
@using FUTOMedical.Helpers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}
<div class="container" style="background-color:#ffffff;">
    <div class="row">
        <div class="col-xs-12">
<div class="" style="background-color: #fff; font-size:14px;margin-top:20px;">
    <h4 class="page-header" style="margin-top:0px;padding:5px; font-size: 16px !important; color: #42ae0e;">Update @HelperFile.GetName(Model.Id) Report </h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.DoctorId)
        @Html.HiddenFor(model => model.FolderNumber)
        @Html.HiddenFor(model => model.NurseId)
        @Html.HiddenFor(model => model.OPDId)
        @Html.HiddenFor(model => model.PatientId)

        <div class="form-group col-xs-12">
            @Html.Label("Doctor Report", htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.DoctorReport, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DoctorReport, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-xs-12">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-xs-12">
            <div class="">
                <input type="submit" value="Report" class="btn btn-success" />
            </div>
        </div>
    </div>
}
   </div>
            </div></div></div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
