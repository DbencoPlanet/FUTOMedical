@model FUTOMedical.Models.Entities.Report
@using FUTOMedical.Helpers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}

<div class="row">
    <!-- page header -->
    <div class="col-lg-12">
        <h1 class="page-header">Report</h1>
    </div>
    <!--end page header -->
</div>
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3> Edit Report</h3>
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["error"]
                    </div>
                }
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
        <div class="panel-body">
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.DoctorId)
            @Html.HiddenFor(model => model.FolderNumber)
            @Html.HiddenFor(model => model.NurseId)
            @Html.HiddenFor(model => model.OPDId)
            @Html.HiddenFor(model => model.PatientId)

            <div class="form-group">
                @Html.LabelFor(model => model.DoctorReport, htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.TextAreaFor(model => model.DoctorReport, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Test Report" } })
                    @Html.ValidationMessageFor(model => model.DoctorReport, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>



            <button type="submit" class="btn btn-primary">Save</button>
            <button type="reset" class="btn btn-success">Reset</button>

        </div>
            }
        </div>
        <!-- End Form Elements -->
    </div>
    <div class="col-lg-2"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

