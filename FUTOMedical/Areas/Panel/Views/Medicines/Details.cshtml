
@model FUTOMedical.Models.Entities.Medicine
@using FUTOMedical.Helpers
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header titlehms"><i class="fa fa-info-circle"></i>Info<i class="fa fa-info-circle"></i></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="panel panel-info">
    <div class="panel-heading">
        <i class="fa fa-info-circle fa-fw"></i>Medicine Information
    </div>
    <!-- /.panel-heading -->
    <div class="col-lg-2"></div>
    <div class="row">

        <div class="col-lg-8">
            <div class="panel-body">



                <div class="form-group ">
                    <label>Category Name:</label>
                    <span> @Html.DisplayFor(model => model.MedicineCategory.Name)</span>

                </div>

                <div class="form-group ">
                    <label>Medicine Name:</label>
                    <span> @Html.DisplayFor(model => model.Name)</span>

                </div>

                <div class="form-group ">
                    <label>Description:</label>
                    <span>@Html.Raw(Model.Description)</span>

                </div>

                <div class="form-group ">
                    <label>Manufacturer:</label>
                    <span> @Html.DisplayFor(model => model.ManufacturedBy)</span>

                </div>

                <div class="form-group ">
                    <label>Price:</label>
                    <span> @Html.DisplayFor(model => model.Price)</span>

                </div>

                <div class="form-group ">
                    <label>Status:</label>
                    <span> @Html.DisplayFor(model => model.Status)</span>

                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>


    </div>
</div>

