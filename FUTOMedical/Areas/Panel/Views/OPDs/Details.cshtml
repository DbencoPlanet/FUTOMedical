
@model FUTOMedical.Models.Entities.OPD
@using FUTOMedical.Helpers
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header titlehms"><i class="fa fa-info-circle"></i>Info<i class="fa fa-info-circle"></i></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="panel panel-info">
    <div class="panel-heading">
        <i class="fa fa-info-circle fa-fw"></i>OPD Information
    </div>
    <!-- /.panel-heading -->
    <div class="col-lg-2"></div>
    <div class="row">

        <div class="col-lg-8">
            <div class="panel-body">



                <div class="form-group ">
                    <label>Patient Name:</label>
                    <span> @Html.DisplayFor(model => model.Patient.Fullname)</span>

                </div>
                <div class="form-group ">
                    <label>Folder Number:</label>
                    <span>@Html.DisplayFor(model => model.Patient.FolderNumber)</span>

                </div>

                <div class="form-group ">
                    <label>Nurse Name:</label>
                    <span>@Html.DisplayFor(model => model.Nurse.Fullname)</span>

                </div>
                <div class="form-group ">
                    <label>BP:</label>
                    <span>@Html.DisplayFor(model => model.BP)</span>

                </div>

                <div class="form-group ">
                    <label>@Html.DisplayNameFor(model => model.Temperature):</label>
                    <span>@Html.DisplayFor(model => model.Temperature)</span>

                </div>
                <div class="form-group ">
                    <label>@Html.DisplayNameFor(model => model.Weight):</label>
                    <span>@Html.DisplayFor(model => model.Weight)</span>

                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>


    </div>
</div>


