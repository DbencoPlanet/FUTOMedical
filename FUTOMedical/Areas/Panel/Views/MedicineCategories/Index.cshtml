@model IEnumerable<FUTOMedical.Models.Entities.MedicineCategory>
@using FUTOMedical.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}

<div class="row">
    <!--  page header -->
    <div class="col-lg-12">
        <h1 class="page-header">Medicine Category</h1>
    </div>
    <!-- end  page header -->
</div>
<div class="row">
    @*<div class="col-lg-1"></div>*@
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-fw fa-file-text-o"></i>
                Medicine Category Management
            </div>
            @if (User.IsInRole("Admin") || User.IsInRole("Doctor") || User.IsInRole("Pharmacist"))
            {
                <div class="panel-body">

                    <div class="btn-group pull-right">

                        <a class="btn btn-success" href="@Url.Action("Create", "MedicineCategories", null)"> <i class='fa fa-plus fa-fw'></i> Add Category</a>
                    </div>

                </div>
            }

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="example1">
                        <thead>
                            <tr>
                                <th>S/No</th>
                                <th>
                                    Category Name
                                </th>
                                <th>
                                    Description
                                </th>


                                <th>
                                    Action
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 0;
                            }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>

                                    <th>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </th>
                                    <th>
                                        @Html.Raw(item.Description.Substring(0, 20))
                                    </th>



                                    <td>
                                        <div class="btn-group">
                                            @if (User.IsInRole("Admin") || User.IsInRole("Doctor") || User.IsInRole("Pharmacist"))
                                            {
                                                <a class="btn btn-warning" href="@Url.Action("Edit", "MedicineCategories", new { id = item.Id, area = "Panel"  })"> <i class='fa fa-edit fa-fw'></i>Edit</a>
                                                <a class="btn btn-success" href="@Url.Action("Details", "MedicineCategories", new { id = item.Id, area = "Panel"  })"> <i class='fa fa-eye fa-fw'></i>Details</a>
                                                <a class="btn btn-danger" href="@Url.Action("Delete", "MedicineCategories", new { id = item.Id, area = "Panel"  })"> <i class='fa fa-minus-circle fa-fw'></i>Delete</a>


                                            }

                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
    @*<div class="col-lg-1"></div>*@
</div>


@section Style {

    <link href="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.js"></script>

}

@section Scripts2 {
    <script>
        $(document).ready(function () {
            $('#example1').dataTable();
        });
    </script>

}

