@model FUTOMedical.Models.Entities.BloodBank

@{
    ViewBag.Title = "Delete Blood Bank";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}


<div class="row">
    <!-- page header -->
    <div class="col-lg-12">
        <h1 class="page-header">Delete Blood Bank</h1>
    </div>
    <!--end page header -->
</div>
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3> Delete Blood Bank </h3>
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["error"]
                    </div>
                }
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="panel-body">
                    <div class="alert alert-danger alert-dismissible">

                        <h4>
                            <i class="icon fa fa-ban"></i> Alert! Are you sure you want to delete this?
                        </h4>
                        <dl class="dl-horizontal">
                            <dt>
                                Age
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Age)
                            </dd>
                            <dt>
                                Doctor Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DonorName)
                            </dd>
                            <dt>
                                Sex
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Sex)
                            </dd>

                            <dt>
                                Blood Group
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.BloodGroup)
                            </dd>

                            <dt>
                                Last Donation Date
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.LastDonationDate)
                            </dd>
                        </dl>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-actions no-color btn-delete">
                        <button type="submit" class="btn btn-primary">Delete</button>
                        <a href="javascript: history.back()" class="btn btn-default">Cancel</a>
                    </div>


                </div>
            }
        </div>
        <!-- End Form Elements -->
    </div>
    <div class="col-lg-2"></div>
</div>

