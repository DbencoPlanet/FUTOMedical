@model IEnumerable<FUTOMedical.Models.Entities.Patient>
@using FUTOMedical.Areas.Service

@{
    ViewBag.Title = "Patients";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}

<div class="row">
    <!--  page header -->
    <div class="col-lg-12">
        <h1 class="page-header">Patients</h1>
    </div>
    <!-- end  page header -->
</div>
<div class="row">
    @*<div class="col-lg-1"></div>*@
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="example1">
                        <thead>
                            <tr>
                                <th>S/NO</th>
                                <th>
                                    FULLNAME
                                </th>
                                <th>
                                    EMAIL
                                </th>
                                <th>
                                    ACTION
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 0;
                            }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>

                                    <td>
                                        @item.Fullname
                                    </td>
                                    <td>@item.EmailAddress</td>
                                    <td>


                                        <div class="btn-group">
                                            @if (User.IsInRole("Admin") || User.IsInRole("Doctor") || User.IsInRole("Accountant"))
                                            {
                                              
                                                <a class="btn btn-success" href="@Url.Action("PatientInvoice", "DashBoard", new { id = item.Id, area = "Accountant"  })"> <i class='fa fa-eye fa-fw'></i>Details</a>
                                             
                                            }

                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
    @*<div class="col-lg-1"></div>*@
</div>


@section Style {

    <link href="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/FUTOMedical/assets/plugins/dataTables/dataTables.bootstrap.js"></script>

}

@section Scripts2 {
    <script>
            $(document).ready(function () {
                $('#example1').dataTable();
            });
    </script>

}

