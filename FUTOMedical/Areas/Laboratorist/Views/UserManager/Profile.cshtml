
@model FUTOMedical.Models.Entities.Laboratorists

@using FUTOMedical.Areas.Service
@{


    string img = "";
    if (GeneralService.LaboratoristInfo() != null)
    {
        img = GeneralService.LaboratoristInfo().Picture;

    }
}


@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_FutoLayout.cshtml";
}





<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header titlehms"><i class="fa fa-hand-o-right"></i>Profile<i class="fa fa-hand-o-left"></i></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="panel panel-info">
    <div class="panel-heading">
        <i class="fa fa-info-circle fa-fw"></i>User Information
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">

                <div class="col-lg-4">
                </div>
                <div class="col-lg-4">
                    @*<img src="./photos/<?php echo $user_image?>" alt="" width="304" height="236" class=" img-circle proimg">*@

                    @if (!string.IsNullOrEmpty(img))
                    {
                        <img src="@Url.Content(img)" alt="" width="304" height="236" class=" img-circle proimg">
                    }
                    else
                    {
                        if (GeneralService.LaboratoristInfo().Sex == "Male")
                        {

                            <img src="~/Content/FUTOMedical/assets/img/avatar5.png" alt="User Image" />
                        }
                        else if (GeneralService.LaboratoristInfo().Sex == "Female")
                        {
                            <img src="~/Content/FUTOMedical/assets/img/avatar2.png" alt="User Image" />

                        }
                        else
                        {
                            <img src="~/Content/FUTOMedical/assets/img/user.jpg" />

                        }
                    }
                </div>

                <div class="col-lg-4">
                </div>
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-lg-12">

                <div class="col-lg-4">
                    <div class="form-group ">
                        <label>Surname:</label>
                        <span>@ViewBag.profile.Surname</span>

                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="form-group ">
                        <label>FirstName:</label>
                        <span>@ViewBag.profile.Firstname</span>

                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="form-group ">
                        <label>Othernames</label>
                        <span>@ViewBag.profile.Othernames</span>

                    </div>

                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-4">
                    <div class="form-group ">
                        <label>Email:</label>
                        <span>@ViewBag.profile.EmailAddress</span>

                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="form-group ">
                        <label>Nurse ID:</label>
                        <span>@ViewBag.profile.NurseId</span>

                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="form-group ">
                        <label>Phone:</label>
                        <span>@ViewBag.profile.PhoneNo</span>

                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-4">
                    <div class="form-group ">
                        <label>Sex:</label>
                        <span>@ViewBag.profile.Sex</span>

                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="form-group ">
                        <label>Address:</label>
                        <span>@ViewBag.profile.Address</span>

                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="form-group ">
                        <label>Blood Group:</label>
                        <span>@ViewBag.profile.BloodGroup</span>

                    </div>

                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-3">
                    <div class="form-group ">
                        <label>Education:</label>
                        <span>@ViewBag.profile.Education</span>

                    </div>

                </div>
                <div class="col-lg-3">
                    <div class="form-group ">
                        <label>Natinality:</label>
                        <span>@ViewBag.profile.Nationality</span>

                    </div>

                </div>
                <div class="col-lg-3">
                    <div class="form-group ">
                        <label>State:</label>
                        <span>@ViewBag.profile.StateOfOrigin</span>

                    </div>

                </div>

                <div class="col-lg-3">
                    <div class="form-group ">
                        <label>LGA:</label>
                        <span>@ViewBag.profile.LocalGov</span>

                    </div>

                </div>

            </div>
        </div>

    </div>
</div>